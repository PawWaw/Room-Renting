<Window x:Class="Room_Renting.Forms.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Room_Renting.Forms"
        mc:Ignorable="d"
        Title="Message" Height="200" Width="300" Background="#F5FBEF">
    <Grid>
        <Button Name="OkButton" Margin="0,100,0,27" HorizontalAlignment="Center"
                    Content="Ok" Foreground="#2F9C95"                    
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="OkButton_Click"/>
        <TextBlock TextWrapping="Wrap" Text="" TextAlignment="Center" x:Name="MessageLabel" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" Width="214" Height="50" FontSize="14" FontWeight="Bold"/>
    </Grid>
</Window>
